@model IEnumerable<Project>

    @foreach (var temp in Model)
    {
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="job-item p-4 mb-4">
                    <div class="row g-4">
                        <div class="col-sm-12 col-md-8 d-flex align-items-center">
                            <div class="text-start ps-4">
                                <h5 class="mb-3">@temp.ProjectName</h5>
                                <span class="text-truncate me-3"><i class="fa fa-solid fa-building text-primary me-2"></i>@temp.Company.CompanyName</span>
                                <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@temp.ExpectedCompletionDurationInDays Days</span>
                                <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@temp.Budget</span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                            <div class="d-flex mb-3">
                            <a class="btn btn-primary" asp-action="SubmitApplication" asp-controller="Home" asp-route-id="@temp.ProjectId"> View & Apply </a>
                            </div>
                            <small class="text-truncate"><i class="far fa-solid fa-money-bill text-primary me-2"></i>Payment Terms : @Enum.GetName(typeof(ProjectPaymentTerms), temp.ProjectPaymentTerms)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
