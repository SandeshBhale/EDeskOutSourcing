@model LoginVM

@{
    Layout = null;
}

<!doctype html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login | Admin </title>

    <!-- for client side validation -->
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/FreelancerFrontend/white.png">

    <!-- Library / Plugin Css Build -->
    <link rel="stylesheet" href="~/adminbackend/css/core/libs.min.css">


    <!-- Hope Ui Design System Css -->
    <link rel="stylesheet" href="~/adminbackend/css/hope-ui.min.css?v=4.0.0">

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/adminbackend/css/custom.min.css?v=4.0.0">

    <!-- Dark Css -->
    <link rel="stylesheet" href="~/adminbackend/css/dark.min.css">

    <!-- Customizer Css -->
    <link rel="stylesheet" href="~/adminbackend/css/customizer.min.css">

    <!-- RTL Css -->
    <link rel="stylesheet" href="~/adminbackend/css/rtl.min.css">

    <style>
        .custom-bg {
            background-color: #007bff; /* Bootstrap primary color */
            color: white;
        }

        .custom-box {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
        }
    </style>


</head>
<body class=" " data-bs-spy="scroll" data-bs-target="#elements-section" data-bs-offset="0" tabindex="0">
    <div class="wrapper">
        <section class="login-content">
            <div class="row m-0 align-items-center bg-white vh-100">
                <div class="col-md-6 d-md-block d-none custom-bg p-0 mt-n1 vh-100 overflow-hidden">
                    <div class="row justify-content-center vh-100 align-items-center">
                        <div class="col-8 custom-box">
                            <p><h5>For Testing</h5></p>
                            <p><strong>Email Id:</strong> Admin@gmail.com</p>
                            <p><strong>Password:</strong> Admin</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row justify-content-center">
                        <div class="col-md-10">
                            <div class="card card-transparent shadow-none d-flex justify-content-center mb-0 auth-card">
                                <div class="card-body">
                                    <h2 class="mb-2 text-center">Admin LogIn</h2>
                                    <p class="text-center">Login to stay connected.</p>
                                    <form asp-action="SignIn" method="Post">
                                        <div class="col-12">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="email" class="form-label">Email</label>
                                                    <input asp-for="Email" class="form-control" id="email" aria-describedby="email" placeholder=" ">
                                                    <span class="invalid-feedback" asp-validation-for="Email"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label for="password" class="form-label">Password</label>
                                                    <input asp-for="Password" class="form-control" id="password" aria-describedby="password" placeholder=" ">
                                                    <span class="invalid-feedback" asp-validation-for="Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12 d-flex align-items-center">
                                                <a asp-action="Index" asp-controller="Home">Back To Home</a>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-primary">Sign In</button>
                                        </div>
                                                                               
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>
            </div>
        </section>
    </div>

    <!-- Library Bundle Script -->
    <script src="~/adminbackend/js/core/libs.min.js"></script>

    <!-- External Library Bundle Script -->
    <script src="~/adminbackend/js/core/external.min.js"></script>

    <!-- Widgetchart Script -->
    <script src="~/adminbackend/js/charts/widgetcharts.js"></script>

    <!-- mapchart Script -->
    <script src="~/adminbackend/js/charts/vectore-chart.js"></script>
    <script src="~/adminbackend/js/charts/dashboard.js"></script>

    <!-- fslightbox Script -->
    <script src="~/adminbackend/js/plugins/fslightbox.js"></script>

    <!-- Settings Script -->
    <script src="~/adminbackend/js/plugins/setting.js"></script>

    <!-- Slider-tab Script -->
    <script src="~/adminbackend/js/plugins/slider-tabs.js"></script>

    <!-- Form Wizard Script -->
    <script src="~/adminbackend/js/plugins/form-wizard.js"></script>

    <!-- AOS Animation Plugin-->
    <!-- App Script -->
    <script src="~/adminbackend/js/hope-ui.js" defer></script>


</body>
</html>