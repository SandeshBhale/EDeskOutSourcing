@model IEnumerable<FreelancerExperience>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Experience List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="FreelancerExperienceHome"> Create </a>
        <hr />
            <!-- Bordered Table -->
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Company Name</th>
                        <th scope="col">Experience</th>
                        <th scope="col">From Date</th>
                        <th scope="col">To Date</th>
                        <th scope="col">Role</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.CompanyName</td>
                            <td>@temp.ExperienceInMonths</td>
                            <td>@temp.FromDate.ToString("dd-MM-yyyy")</td>
                            <td>@temp.ToDate.ToString("dd-MM-yyyy")</td>
                            <td>@temp.RoleName</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.FreelancerExperienceId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.FreelancerExperienceId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
            <!-- End Bordered Table -->


    </div>
</div>