@model IEnumerable<FreelancerCertifications>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Certifications List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="FreelancerCertificationsHome"> Create </a>
        <hr />
            <!-- Bordered Table -->
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Certificate Title</th>
                        <th scope="col">Passing Year</th>
                        <th scope="col">Institute Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.CertificateTitle</td>
                            <td>@temp.PassingYear</td>
                            <td>@temp.UnivercityInstituteName</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.FreelancerCertificationId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.FreelancerCertificationId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
            <!-- End Bordered Table -->


    </div>
</div>