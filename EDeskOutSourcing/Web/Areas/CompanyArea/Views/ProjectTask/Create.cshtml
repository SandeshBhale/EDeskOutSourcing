@model ProjectTask
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Add Project Task</h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body">
        <form class="form-horizontal" asp-action="Create" method="post">
            <div class="form-group">
                <label class="control-label">Select Project : </label>
                <select class="form-select" name="ProjectId" asp-items="@ViewBag.ProjectId">
                    <option value="0"> Select Project</option>
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="control-label" for="email1">Task Title : </label>
                <div class="col-md-12">
                    <input asp-for="TaskTitle" class="form-control" />
                    <span asp-validation-for="TaskTitle" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                <label class="form-label">Project Task Status : </label>
                <select class="form-select" name="TaskStatus" asp-items="@Html.GetEnumSelectList<Repo.Enums.TaskStatus>()">
                    <option value="1" selected> Created </option>
                </select>
                <span asp-validation-for="TaskStatus" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label class="control-label" for="email1">Task Description : </label>
                <div class="col-md-12">
                    <textarea asp-for="TaskDescription" class="form-control"></textarea>
                    <span asp-validation-for="TaskDescription" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label" for="email1">Task Amount : </label>
                <div class="col-md-12">
                    <input type="number" asp-for="TaskAmount" class="form-control" />
                    <span asp-validation-for="TaskAmount" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>