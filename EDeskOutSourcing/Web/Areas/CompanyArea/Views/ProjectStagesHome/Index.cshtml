@model IEnumerable<ProjectStages>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Project Stages List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="ProjectStagesHome"> Create </a>
        <hr />

        <div style="height: 400px; overflow-y: auto;">
            <!-- Bordered Table -->
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Project Name</th>
                        <th scope="col">No of Stages</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.Project.ProjectName</td>
                            <td></td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.ProjectStageId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.ProjectStageId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
            <!-- End Bordered Table -->
        </div>



    </div>
</div>