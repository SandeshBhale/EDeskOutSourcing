@model IEnumerable<Project>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Projects List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="ProjectHome"> Create </a>
        <hr />

        <div style="height: 400px; overflow-y: auto;">
            <!-- Bordered Table -->
            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Project Name</th>
                        <th scope="col">Project Desc</th>
                        <th scope="col">Project Status</th>
                        <th scope="col">Project Payment Terms</th>
                        <th scope="col">Project T&C</th>
                        <th scope="col">Budjet</th>
                        <th scope="col">Expected Completion</th>
                        <th scope="col">Documents</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.ProjectName</td>
                            <td>@temp.ProjectDescription</td>
                            <td>@Enum.GetName(typeof(ProjectStatus),temp.ProjectStatus)</td>
                            <td>@Enum.GetName(typeof(ProjectPaymentTerms),temp.ProjectPaymentTerms)</td>
                            <td>@temp.ProjectTermsAndConditions</td>
                            <td>@temp.Budget</td>
                            <td>@temp.ExpectedCompletionDurationInDays</td>
                            <td><a class="btn btn-info" asp-action="Index" asp-controller="ProjectDocumentHome" asp-route-id="@temp.ProjectId">Document</a></td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.ProjectId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.ProjectId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
            <!-- End Bordered Table -->
        </div>



    </div>
</div>