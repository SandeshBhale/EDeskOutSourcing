@model ProjectStage
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Edit Stage</h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body" mx-auto w-75>
        <form class="form-horizontal" asp-action="Edit" method="post">
            <input type="hidden" asp-for="ProjectId"  value="@ViewBag.ProjectId"/>
            <input type="hidden" asp-for="ProjectStageId" />
            <div class="form-group row">
                <label class="control-label col-sm-3 align-self-center mb-0">Stage Name : </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="ProjectStageName" class="form-control" />
                    <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-3 align-self-center mb-0">Duration In Hours : </label>
                <div class="col-sm-9">
                    <input type="text" asp-for="DurationInHours" class="form-control" />
                    <span asp-validation-for="DurationInHours" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-3 align-self-center mb-0">Step Description : </label>
                <div class="col-sm-9">
                   @*  <input type="text" asp-for="StageDescription" class="form-control" /> *@
                   <textarea asp-for="StageDescription" class="form-control"></textarea>
                    <span asp-validation-for="StageDescription" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>