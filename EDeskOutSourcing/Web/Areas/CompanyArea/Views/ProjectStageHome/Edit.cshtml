@model ProjectStageVM
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Edit Project Stages </h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body">

        <form class="form-horizontal" asp-action="Create" asp-controller="ProjectStageHome" method="post">
            <div class="form-group">
                <label class="control-label">Select Project : </label>
                <select class="form-select" name="ProjectId" asp-items="@ViewBag.ProjectId">
                    <option value="0"> Select Project</option>
                </select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label" for="email1">Stage Name : </label>
                        <input name="ProjectStageName" class="form-control" />
                        <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label" for="email1">Duration In Hours : </label>
                        <input type="number" name="DurationInHours" class="form-control" />
                        <span asp-validation-for="DurationInHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="control-label" for="email1">Step Description : </label>
                        <textarea name="StageDescription" class="form-control"></textarea>
                        <span asp-validation-for="StageDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <input name="ProjectStageName" class="form-control" />
                        <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <input type="number" name="DurationInHours" class="form-control" />
                        <span asp-validation-for="DurationInHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <textarea name="StageDescription" class="form-control"></textarea>
                        <span asp-validation-for="StageDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <input name="ProjectStageName" class="form-control" />
                        <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <input type="number" name="DurationInHours" class="form-control" />
                        <span asp-validation-for="DurationInHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <textarea asp-for="StageDescription" class="form-control"></textarea>
                        <span asp-validation-for="StageDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <input name="ProjectStageName" class="form-control" />
                        <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <input type="number" name="DurationInHours" class="form-control" />
                        <span asp-validation-for="DurationInHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <textarea name="StageDescription" class="form-control"></textarea>
                        <span asp-validation-for="StageDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <input name="ProjectStageName" class="form-control" />
                        <span asp-validation-for="ProjectStageName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <input type="number" name="DurationInHours" class="form-control" />
                        <span asp-validation-for="DurationInHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <textarea name="StageDescription" class="form-control"></textarea>
                        <span asp-validation-for="StageDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>