@model IEnumerable<ProjectStage>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Projects List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="ProjectStageHome">Create</a>
        <hr />

        <!-- Bordered Table -->
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Project Name</th>
                    <th scope="col">No of Stages</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                    var processedProjects = new HashSet<string>();
                }
                @foreach (var temp in Model)
                {
                    if (!processedProjects.Contains(temp.Project.ProjectName))
                    {
                        processedProjects.Add(temp.Project.ProjectName);
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.Project.ProjectName</td>
                            <td>@temp.ProjectStages.Count()</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.ProjectId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.ProjectStageId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                }
            </tbody>
        </table>
        <!-- End Bordered Table -->

    </div>
</div>
