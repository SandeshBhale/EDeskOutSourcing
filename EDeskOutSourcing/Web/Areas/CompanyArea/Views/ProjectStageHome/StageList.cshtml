@model IEnumerable<ProjectStage>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Projects Stages List</h5>
        <hr />

        <!-- Bordered Table -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Stage Name</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Actions</th>
                </thead>
                <tbody>
                    @{
                        int srno = 1;
                    }
                    @foreach (var temp in Model)
                    {
                        <tr>
                            <th scope="row">@srno</th>
                            <td>@temp.ProjectStageName</td>
                            <td>@temp.DurationInHours</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.ProjectStageId" asp-route-id2="@temp.ProjectId">Edit</a>
                                |
                                <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.ProjectStageId" asp-route-id2="@temp.ProjectId">Delete</a>
                            </td>
                        </tr>
                        srno++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End Bordered Table -->
    </div>
</div>
