@model State
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">State List</h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body" mx-auto w-75>
        <form class="form-horizontal" asp-action="Edit" method="post">
            <input type="hidden" asp-for="StateId" />
            <div class="form-group row">
                <label class="control-label col-sm-3 align-self-center mb-0">State Name : </label>
                <div class="col-sm-9">
                    <input asp-for="StateName" class="form-control" />
                    <span asp-validation-for="StateName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <label class="form-label">Select Stream Name</label>
                <select class="form-select" asp-for="CountryId" asp-items="@ViewBag.Country">
                    <option> Select Stream</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>