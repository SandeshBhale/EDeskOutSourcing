@using Repo.Enums
@model Education
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Add Education</h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body">
        <form class="form-horizontal" asp-action="Create" method="post">
            <div class="form-group row">
                <label class="control-label" for="email1">Education Name : </label>
                <div class="col-md-12">
                    <input asp-for="EducationName" class="form-control" />
                    <span asp-validation-for="EducationName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                <label class="form-label">Education Type</label>
                <select class="form-select" name="EducationType" asp-items="@Html.GetEnumSelectList<EducationType>()">
                    <option value="0"> Select Country</option>
                </select>
                <span asp-validation-for="EducationType" class="text-danger"></span>
            </div> 

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>