@model City
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">Add City</h4>
        </div>
    </div>
    <div>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

    </div>
    <div class="card-body">
        <form class="form-horizontal" asp-action="Create" method="post">
            <div class="form-group row">
                <label class="control-label" for="email1">City Name : </label>
                <div class="col-sm-12">
                    <input asp-for="CityName" class="form-control" />
                    <span asp-validation-for="CityName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <label class="form-label">Country Name</label>
                <select class="form-select" id="country" name="id" asp-items="@ViewBag.Country">
                    <option value="0"> Select Country</option>
                </select>
                <span asp-validation-for="State.CountryId" class="text-danger"></span>
            </div>
            <div class="col-12">
                <label class="form-label">State Name</label>
                <select class="form-select" asp-for="StateId" id="state" name="id">
                    <option> Select Country</option>
                </select>
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(function () {
         $("#country").change(function () {
             $.ajax({
                 url: "/Home/GetCountryJson/"+$("#country").val(),
                 type:"Get",
                 contentType:"application/json",
                 success:function(result)
                 {
                     $("#country").empty();
                     for(var i=0;i<result.length;i++)
                     {
                       var str="<option value='"+result[i].countryId+"'>" + result[i].countryName+"</option>";
                       $("#country").append(str);
                     }
                 },
                 error:function(err)
                 {
                   alert(JSON.stringify(err));
                 }
             });

         });

     });
</script>