@model IEnumerable<City>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">City List</h5>

        <a class="btn btn-success" asp-action="Create" asp-controller="CityHome"> Create </a>
        <hr />
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">City Name</th>
                    <th scope="col">State Name</th>
                    <th scope="col">Country Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int srno = 1;
                }
                @foreach (var temp in Model)
                {
                    <tr>
                        <th scope="row">@srno</th>
                        <td>@temp.CityName</td>
                        <th>@temp.State.StateName</th>
                        <th>@temp.State.Country.CountryName</th>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@temp.CityId">Edit</a>
                            |
                            <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@temp.CityId">Delete</a>
                        </td>
                    </tr>
                    srno++;
                }
            </tbody>
        </table>
        <!-- End Bordered Table -->



    </div>
</div>